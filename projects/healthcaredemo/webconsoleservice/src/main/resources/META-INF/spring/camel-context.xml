<?xml version="1.0" encoding="UTF-8"?>
<!-- Configures the Camel Context-->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean class="io.fabric8.mq.core.MQConnectionFactory" id="amqConnectionFactory">
        <property name="userName" value="admin"/>
        <property name="password" value="r3dh4t1!"/>
    </bean>
    <bean class="io.fabric8.mq.camel.AMQComponent" id="amq"/>
    <camelContext id="context-692f290b-4a7d-4c49-990a-c1c8d7735e45" xmlns="http://camel.apache.org/schema/spring">
        <restConfiguration apiContextPath="api-docs" bindingMode="auto"
            component="jetty" enableCORS="true" port="8080">
            <apiProperty key="host" value="0.0.0.0"/>
            <apiProperty key="cors" value="true"/>
            <apiProperty key="api.title" value="Healthcare demo clinical API"/>
            <apiProperty key="api.version" value="1.0.0"/>
            <corsHeaders key="Access-Control-Allow-Origin" value="*"/>
            <corsHeaders key="Access-Control-Allow-Methods" value="GET, HEAD, POST, PUT, DELETE, TRACE, OPTIONS, CONNECT, PATCH"/>
            <corsHeaders key="Access-Control-Allow-Headers" value="Origin, Accept, X-Requested-With, Content-Type, Access-Control-Request-Method, Access-Control-Request-Headers"/>
        </restConfiguration>
        <rest path="/his">
            <get uri="/registry/{firstname}/{familyname}/{hisid}">
                <to uri="direct:registry"/>
            </get>
            <get uri="/allpatients">
                <to uri="direct:allpatients"/>
            </get>
            <get uri="/dotest/{hisid}/{dept}/{testdetail}/{observation}">
                <to uri="direct:dotest"/>
            </get>
            <get uri="/prescribe/{hisid}/{interval}/{prescription}">
                <to uri="direct:prescribe"/>
            </get>
            <get uri="/pharmacy/{hisid}/">
                <to uri="direct:pharmacy"/>
            </get>
        </rest>
        <route id="doRegistryweb">
            <from id="_from1" uri="direct:registry"/>
            <log id="_log1" message="registry hisid: ${headers.hisid}"/>
            <log id="_log2" message="registry firstname: ${headers.firstname}"/>
            <log id="_log3" message="registry familyname: ${headers.familyname}"/>
            <log id="_log4" message="body: ${body}"/>
            <to id="_to1" uri="amq:queue:HISMSG"/>
        </route>
        <route id="doTestweb">
            <from id="_from2" uri="direct:dotest"/>
            <log id="_log5" message="diagnose hisid: ${headers.hisid}"/>
            <to id="_to2" uri="amq:queue:DOTESTMSG"/>
        </route>
        <route id="doAllPatientsweb">
            <from id="_from3" uri="direct:allpatients"/>
            <log id="_log6" message="AllPatientsweb"/>
            <to id="_to3" uri="amq:queue:ALLPATIENTS"/>
        </route>
        <route id="prescribeweb">
            <from id="_from4" uri="direct:prescribe"/>
            <log id="_log7" message="prescribe hisid: ${headers.hisid}"/>
            <log id="_log8" message="diagnose interval: ${headers.interval}"/>
            <log id="_log9" message="diagnose prescription: ${headers.prescription}"/>
            <log id="_log10" message="body: ${body}"/>
            <to id="_to4" uri="amq:queue:PRESCRIPTIONMSG"/>
        </route>
        <route id="pharmacyweb">
            <from id="_from5" uri="direct:pharmacy"/>
            <log id="_log11" message="prescribe hisid: ${headers.hisid}"/>
            <to id="_to5" uri="activemq:queue:PHARMACYMSG"/>
            <wireTap id="_wireTap1" uri="amq:queue:msgtransmit"/>
        </route>
    </camelContext>
</beans>
