<?xml version="1.0" encoding="UTF-8"?>
<!-- Configures the Camel Context-->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean class="io.fabric8.mq.core.MQConnectionFactory" id="amqConnectionFactory">
        <property name="userName" value="admin"/>
        <property name="password" value="r3dh4t1!"/>
    </bean>
    <bean class="io.fabric8.mq.camel.AMQComponent" id="amq"/>
    <camelContext id="RadiologyService" xmlns="http://camel.apache.org/schema/spring">
        <!-- here is a sample which processes the input files
         (leaving them in place - see the 'noop' flag)
         then performs content based routing on the message using XPath -->
        <route id="test">
            <from id="_from1" uri="amq:queue:radiologytest"/>
            <log id="_log1" message="${body}"/>
            <unmarshal id="_unmarshal1">
                <hl7/>
            </unmarshal>
            <setHeader headerName="testcontent" id="_setHeader1">
                <terser>OBR-4-2</terser>
            </setHeader>
            <setHeader headerName="familyName" id="_setHeader2">
                <terser>PID-5-1</terser>
            </setHeader>
            <setHeader headerName="firstName" id="_setHeader3">
                <terser>PID-5-2</terser>
            </setHeader>
            <setBody id="_setBody1">
                <simple>${header.firstName} ${header.familyName} has scheduled: ${header.testcontent}</simple>
            </setBody>
            <to id="_to1" uri="direct:displayinRadiologyconsole"/>
        </route>
        <route id="_route3">
            <from id="_from2" uri="amq:queue:radiology"/>
            <log id="_log2" message="${body}"/>
            <setHeader headerName="familyName" id="_setHeader4">
                <terser>PID-5-1</terser>
            </setHeader>
            <setHeader headerName="firstName" id="_setHeader5">
                <terser>PID-5-2</terser>
            </setHeader>
            <log id="_log3" message="Family name: ${header.familyName}"/>
            <setBody id="_setBody2">
                <simple>${header.firstName} ${header.familyName} admitted!</simple>
            </setBody>
            <to id="_to2" uri="direct:displayinRadiologyconsole"/>
        </route>
        <route id="displayinRadiologyconsole">
            <from id="_from3" uri="direct:displayinRadiologyconsole"/>
            <to id="_to3" uri="websocket://demo?port=9293&amp;sendToAll=true"/>
        </route>
    </camelContext>
</beans>
